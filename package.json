{
  "name": "pcpr",
  "displayName": "Programmer Chat Programming Robot",
  "description": "A Programmer Chat Programming Robot, detecting logical errors in your code.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lin3939/pcpr.git"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./extension.mjs",
  "contributes": {
    "commands": [
      {
        "command": "pcpr.checkCode",
        "title": "PCPR Check Code"
      },
      {
        "command": "pcpr.localCheck",
        "title": "PCPR Local Check"
      },
      {
        "command": "pcpr.setAPIKey",
        "title": "PCPR Set API Key"
      },
      {
        "command": "pcpr.clearAPIKey",
        "title": "PCPR Clear API Key"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PCPR Configuration",
      "properties": {
        "pcpr.apiKey": {
          "type": "null",
          "description": "API key for cloud plan.",
          "markdownDescription": "**API Key Control**\n\n[Set/Update API Key](command:pcpr.setAPIKey)\n\n[Clear API Key](command:pcpr.clearAPIKey)",
          "order": 0,
          "scope": "application"
        },
        "pcpr.cloudBaseURL": {
          "type": "string",
          "description": "The base URL.",
          "order": 1,
          "scope": "application"
        },
        "pcpr.cloudModel": {
          "type": "string",
          "description": "The model used by PCPR cloud plan.",
          "order": 2,
          "scope": "application"
        },
        "pcpr.localBaseURL": {
          "type": "string",
          "description": "The base URL for your local model.",
          "default": "http://localhost:11434/v1/",
          "order": 3,
          "scope": "application"
        },
        "pcpr.localModel": {
          "type": "string",
          "description": "The local model used by PCPR local plan.",
          "order": 4,
          "scope": "application"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "pcpr.checkCode",
          "title": "PCPR Check Code",
          "when": "editorLangId != markdown && editorLangId != plaintext"
        },
        {
          "command": "pcpr.localCheck",
          "title": "PCPR Local Check",
          "when": "editorLangId != markdown && editorLangId != plaintext"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2"
  },
  "dependencies": {
    "openai": "^6.16.0"
  }
}